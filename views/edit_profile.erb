<h2>Edit profile:</h2>

<form action="/profile/<%= @old_username %>/edit?id=<%= @id %>" method="post">

  <label for="full_name">Full name:</label>
  <input type="text" name="full_name" id="full_name" value='<%= @full_name %>' placeholder="Enter your full name">

  <label for="username">Username:</label>
  <input type="text" name="new_username" id="username" value='<%= @old_username %>' placeholder="Enter a new username">

  <input type="submit" value="Go!">
</form>